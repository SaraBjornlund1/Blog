@{
}

@model List<Blog.Models.Post>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/StyleSheet.css" rel="stylesheet" />

<div>
    <h1>Tidigare inlägg!</h1>

    @foreach (var post in Model)
    {
        <ul>
            <li>@post.Date.ToString("d")  <a asp-controller="Home" asp-action="SinglePost" asp-route-id="@post.PostId">@post.HeadLine</a> </li>
        </ul>
    }

</div>


