<!--Sida för att spara inlägg-->

@model Blog.ViewModels.BlogViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/StyleSheet.css" rel="stylesheet" />

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<div>
    <h1>Välkommen till Saras Blogg!</h1>


    <br /><br />
    <!--<a asp-controller="Home" asp-action="ViewBlogPost">Se tidigare inlägg</a>-->
    <a asp-controller="Home" asp-action="Search">Sök efter ett inlägg</a>

    <br /><br />

    <form asp-controller="Home" asp-action="SavePost" method="post">

        <label>Rubrik:</label><br />
        <input type="text" asp-for="post.HeadLine" autocomplete="off" />
        <span asp-validation-for="post.HeadLine"></span>

        <br /><br />
        <!--Datum-->

        <label>Ange Datum: </label><br />
        <input type="date" asp-for="post.Date" />
        <span asp-validation-for="post.Date"></span>

        <br /><br />
        <!--Rullista-->
        <label>Ange kategori:</label><br />
        <select asp-for="@Model.post.CategoryId" asp-items="@Model.CategoryList"></select>
        <span asp-validation-for="post.CategoryId"></span>

        <br /><br />

        <label>Blogg inlägg:</label><br />
        <textarea asp-for="post.BlogText" rows="10" cols="90"></textarea>
        <span asp-validation-for="post.BlogText"></span>

        <br /><br />

        <input type="submit" value="Spara inlägg" />
        <br /><br />

    </form>
</div>



