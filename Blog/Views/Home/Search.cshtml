@{
}

@model Blog.ViewModels.BlogViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/StyleSheet.css" rel="stylesheet" />

<div>
    <h1>Sök!</h1>

    <form asp-controller="Home" asp-action="Search" method="post">

        <label>Sök på rubrik eller kategori: </label>
        <input type="text" asp-for="SearchValue" autocomplete="off"/>

        <input type="submit" value="Sök" />


    </form>

    @foreach (var post in Model.Search)
    {
    <ul>
        <!--<li><p>Rubrik: @post.HeadLine</p> @post.BlogText</li>-->
        <li>@post.Date.ToString("d")  <a asp-controller="Home" asp-action="SinglePost" asp-route-id="@post.PostId">@post.HeadLine</a> </li>
    </ul>

        <br />
    }

</div>
